{
  "info": {
    "name": "Messaging App API",
    "description": "Postman collection for testing Messaging App endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Get JWT Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"testpass123\"\n}"
            },
            "url": {
              "raw": "http://localhost:8000/api/token/",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "token", ""]
            }
          }
        },
        {
          "name": "Refresh JWT Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refresh\": \"your_refresh_token_here\"\n}"
            },
            "url": {
              "raw": "http://localhost:8000/api/token/refresh/",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "token", "refresh", ""]
            }
          }
        }
      ]
    },
    {
      "name": "Conversations",
      "item": [
        {
          "name": "List Conversations",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:8000/api/conversations/",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "conversations", ""]
            }
          }
        }
      ]
    }
  ]
}